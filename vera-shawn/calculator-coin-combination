function coinCombo (cents) {
  // creating variables
  let pennies = 0;
  let nickels = 0;
  let dimes = 0;
  let quarters = 0;
  
  // if/while statements to sort variables
  if (cents >= 25) {
    cents -= 25;
    quarters++;
  }
  while (cents >= 10) {
    cents -= 10;
    dimes++;
  }
   while (cents >= 5) {
    cents -= 5;
    nickels++;
  }
   while (cents >= 1) {
    cents -= 1;
    pennies++;
  }
  // setting array to equal coin value
	return [pennies, nickels, dimes, quarters];
}